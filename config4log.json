{
    "appenders": [
        {
            "type": "console"
        },
        {
            "type": "file",
            "filename": "logs/info.log",
            "maxLogSize": 1048576,
            "backups": 100
        },
        {
            "type": "logLevelFilter",
            "level": "ERROR",
            "appender": {
                "type": "file",
                "filename": "logs/error.log",
                "maxLogSize": 1048576,
                "backups": 100
            }
        }
    ],
    "replaceConsole": true
}